# Application
APP_NAME="Penny Stock Picker"
DEBUG=false
SECRET_KEY=change-this-to-a-secure-random-string

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/penny_stocks

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Market Data APIs
POLYGON_API_KEY=your-polygon-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
SEC_API_KEY=your-sec-api-key

# News APIs
BENZINGA_API_KEY=your-benzinga-key
STOCK_NEWS_API_KEY=your-stock-news-api-key

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=PennyStockPicker/1.0

# Alpaca Broker
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_API_SECRET=your-alpaca-api-secret
ALPACA_PAPER=true

# Email Notifications (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=alerts@penny.co-l.in

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Frontend
FRONTEND_URL=https://penny.co-l.in
CORS_ORIGINS=["https://penny.co-l.in","http://localhost:5173"]

# Penny Stock Criteria
PENNY_STOCK_MAX_PRICE=5.00
PENNY_STOCK_MIN_VOLUME=10000
